<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{ usuario }} !
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Usuario</h3>
        </div>
        <div class="col-2 text-right">
            <a href="#" class="btn btn-success"> <i class="fa fa-plus"></i>-</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Usuario</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cuenta}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{usuario}}</td>
                        <td class="text-right">
                            <a href=" " class="btn btn-sm btn-secondary"><i class="fas fa-pencil-alt"></i> </a>
                            <a href="/admin/cuenta/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i> </a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>s