<div class="container" style="margin:100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar productos</h4>
            <form action="/admin/cuenta/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{cuenta.id}}" name="id">
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input type="text" class="form-control" name="titulo" value="{{cuenta.titulo}}">
                </div>

                <div class="form-group">
                    <label for="">Descripci√≥n</label>
                    <textarea name="descripcion" class="form-control" name="descripcion">{{cuenta.descripcion}}</textarea>
                </div>

                <div class="form-group">
                    <label for="">Precio</label>
                    <input type="number" class="form-control" name="precio" value="{{cuenta.precio}}">
                </div>

                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{cuenta.img_id}}">
                    </p>
                </div>

                <button type="submit" class="btnbtn-primary">Guardar</button>
            </form>

            {{#if error}}
                <p>{{message}}</p>
            {{/if}}

        </div>
    </div>
</div>

